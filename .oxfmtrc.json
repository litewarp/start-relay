{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": true,
  "experimentalSortImports": {
    "order": "asc",
    "newlinesBetween": true,
    "groups": [
      ["builtin"],
      ["internal"],
      ["index", "parent", "sibling"],
      ["import-type"]
    ]
  },
  "ignorePatterns": [
    "pnpm-lock.yaml",
    "__generated__",
    "dist",
    "**/routeTree.gen.ts"
  ]
}
